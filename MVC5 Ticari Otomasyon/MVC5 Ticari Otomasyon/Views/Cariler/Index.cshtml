@using MVC5_Ticari_Otomasyon.Models.Sınıflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table id="tbl1" class=" table table-bordered" style="margin-top:20px">
    <thead>
        <tr>
            <td>Id</td>
            <td>Cari Ad</td>
            <td>Cari Soyad</td>
            <td>Cari Şehir</td>
            <td>Cari Mail</td>
            <td>Sil</td>
            <td>Güncelle</td>
            <td>Detaylar</td>
        </tr>
        </thead>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.CarilId</td>
                <td>@x.CariAd</td>
                <td>@x.CariSoyad</td>
                <td>@x.CariSehir</td>
                <td>@x.CariMail</td>
                <td><a href="/Cariler/CariSil/@x.CarilId" class="btn btn-warning" style="background-color:darkorchid">Sil</a></td>
                <td><a href="/Cariler/CariGetir/@x.CarilId" class="btn btn-warning" style="background-color:coral">Güncelle</a></td>
                <td><a href="/Cariler/MusteriSatış/@x.CarilId" class="btn btn-warning" style="background-color:red">Satışlar</a></td>
            </tr>
        }

</table>
<td><a href="/Cariler/YeniCari" class="btn btn-warning" style="background-color:darkorange">Yeni Cari Ekle</a></td>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>




<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>