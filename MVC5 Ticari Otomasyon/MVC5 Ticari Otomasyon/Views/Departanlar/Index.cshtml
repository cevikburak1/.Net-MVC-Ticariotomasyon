@using MVC5_Ticari_Otomasyon.Models.Sınıflar
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table id="tbl1" class="table table-bordered" style="margin-top:20px">
    <thead>
        <tr>
            <td>ID</td>
            <td>Departman İsmi</td>
            <td>Sil</td>
            <td>Güncelle</td>
            <td>Detay</td>

        </tr>
        </thead>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.DepartmanId</td>
                <td>@k.DepartmanAd</td>
                <td><a href="/Departanlar/DepartmanSil/@k.DepartmanId" class="btn btn-warning">Sil</a></td>
                <td><a href="/Departanlar/DepartmanGetir/@k.DepartmanId" class="btn btn-danger">Güncelle</a></td>
                <td><a href="/Departanlar/DepartmanDetay//@k.DepartmanId" class="btn btn-success" style="background-color:darkorchid">Detay</a></td>
            </tr>
        }

</table>
<a href="/Departanlar/YeniDepartman" class="btn btn-warning" style="background-color:darkgray">Yeni Departman Ekle</a>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>




<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>