@model IEnumerable<MVC5_Ticari_Otomasyon.Models.Sınıflar.SınıfGrub2>
 
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>
                @{ int sırano = 0;}
                @foreach (var x in Model)
                {


                    <tr>
                        <td>@{sırano++;}@sırano</td>
                        <td>@x.departman</td>
                        <td>
                            @if (x.sayı == 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 20%"></div>
                                </div>
                            }
                            @if (x.sayı == 2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 40%"></div>
                                </div>
                            }
                            @if (x.sayı == 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-gradient-green" style="width: 60%"></div>
                                </div>
                            }
                            @if (x.sayı == 4)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-gradient-purple" style="width: 70%"></div>
                                </div>
                            }
                            @if (x.sayı == 5)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-gradient-orange" style="width: 80%"></div>
                                </div>
                            }
                        </td>
                        <td><span class="badge bg-danger">@x.sayı</span></td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>