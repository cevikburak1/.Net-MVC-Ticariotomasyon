@using MVC5_Ticari_Otomasyon.Models.Sınıflar
@model List<SatışHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table id="tbl1" class="table table-bordered" style="margin-top:20px">
    <thead>
        <tr>
            <td>Satış Id</td>
            <td>Personel Ad</td>
            <td>Urun Ad</td>
            <td>Cari Ad</td>
            <td>Tarih</td>
            <td>Adet</td>
            <td>Fiyat</td>
            <td>Toplam Tutar</td>
            <td>Durum</td>
            <td>Satış İptal</td>
            <td>Detaylar</td>


        </tr>
    </thead>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Satışıd</td>
                <td>@x.Personel.PersonelAd</td>
                <td>@x.Ürünler.UrunAd</td>
                <td>@x.Cariler.CariAd</td>
                <td>@x.Tarih</td>
                <td>@x.Adet</td>
                <td>@x.Fiyat</td>
                <td>@x.ToplamTutar</td>
                <td>@x.Durum</td>
                <td><a href="/Satış/SatışIptal/@x.Satışıd" class="btn btn-danger" style="background-color:gray">Satış İptal </a></td>
                <td><a href="/Satış/SatısDetay/@x.Satışıd" class="btn btn-danger" style="background-color:dodgerblue">Detaylar</a></td>

            </tr>
        }

</table>
<a href="/Satış/YeniSatış" class="btn btn-warning" style="background-color:goldenrod"> Yeni Satış Oluştur</a>



<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>




<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>